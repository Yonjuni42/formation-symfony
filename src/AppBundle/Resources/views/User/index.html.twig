{% extends '::base.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <a class="btn btn-sm btn-success" href="{{ path('user_new') }}">
        <span class="glyphicon glyphicon-plus"></span> Add user
    </a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Name</th>
            <th>Firstname</th>
            <th>Roles</th>
            <th>Enabled</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.firstname }}</td>
                <td>
                    {% for role in entity.roles %}
                        <div> {{ role }} </div>
                    {% else %}
                        no role
                    {% endfor %}
                </td>
                <td>{{ entity.enabled|active_status }}</td>
                <td>
                    <a class="btn btn-xs btn-primary" href="{{ path('user_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-xs btn-warning" href="{{ path('user_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
