{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{  'app.computer.list'|trans|capitalize }}</h1>

    <a class="btn btn-sm btn-success" href="{{ path('computer_new') }}">
        <span class="glyphicon glyphicon-plus"></span> Add computer
    </a>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Ip</th>
            <th>Enabled</th>
            <th>Person</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('computer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.ip }}</td>
                <td>{{ entity.enabled|computer_status }}</td>
                <td>{{ entity.person|default('N/A') }}</td>
                <td>
                    <a class="btn btn-xs btn-primary" href="{{ path('computer_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-xs btn-warning" href="{{ path('computer_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
