{% extends '::base.html.twig' %}

{% block title %} Liste des ordinateurs {% endblock %}

{% block body %}
<h1>Liste des ordinateurs</h1>
<ul>
    {% for computer in computers %}
        <li>ID : {{ computer.id }} -
            nom : {{ computer.name }} -
            IP : {{ computer.ip }} -
            {% if computer.enabled %} activé {% else %} désactivé {% endif %}</li>
    {% else %}
        <h4>Pas d'ordinateur :'(</h4>
    {% endfor %}
</ul>

<table class="table table-stripped">
    <tr>
        <td>ID</td>
        <td>Nom</td>
        <td>IP</td>
        <td>Activé ?</td>
    </tr>
    {% for computer in computers %}
        <tr>
            <td>
                {{ computer.id }}
            </td>
            <td>
                {{ computer.name }}
            </td>
            <td>
                {{ computer.ip }}
            </td>
            <td>
                {% if computer.enabled %} Activé {% else %} Désactivé {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            Pas d'ordinateur :'(
        </tr>
    {% endfor %}
</table>

{% endblock %}